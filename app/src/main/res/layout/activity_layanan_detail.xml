<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LayananDetailActivity">

   <RelativeLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="160dp"
           android:background="@drawable/seg_gradient_noradius"></LinearLayout>



       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:paddingBottom="280dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="120dp"
               android:background="@drawable/seg_white_navigation"
               android:orientation="vertical"
               android:paddingRight="20dp"
               android:paddingLeft="20dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="40dp"
                   android:fontFamily="@font/my_font"
                   android:text="Layanan"
                   android:textSize="22dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:fontFamily="@font/my_font"
                   android:text="loremdpwaldpwalpdlpwaldw pwdlpwal pdlwap ldpawlpdlp wlapdlpwaldpw  dwad wad aw daw wadwadkwaodkowa dwaok waodkoaw okowak dokwadaplpd lapwlp"
                   android:textSize="12dp" />


               <LinearLayout
                   android:layout_marginTop="20dp"
                   android:orientation="vertical"
                   android:padding="20dp"
                   android:background="@drawable/seg_secondary_card"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/chk_pedicure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pedicure"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="20dp"
                   android:orientation="vertical"
                   android:padding="20dp"
                   android:background="@drawable/seg_secondary_card"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <CheckBox
                       android:id="@+id/chk_gigi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Perawatan Gigi"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="20dp"
                   android:orientation="vertical"
                   android:padding="20dp"
                   android:background="@drawable/seg_secondary_card"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <CheckBox
                       android:id="@+id/chk_fisio"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Fisioterapi"/>

               </LinearLayout>

           </LinearLayout>
       </ScrollView>



       <!--JUMLAH-->
       <LinearLayout
           android:background="@drawable/seg_secondary_navigation"
           android:layout_width="match_parent"
           android:layout_alignParentBottom="true"
           android:orientation="horizontal"
           android:padding="20dp"
           android:layout_height="80dp">

           <LinearLayout
               android:layout_weight="2"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:textColor="@color/textSecondary"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Jumlah      "/>

               <TextView
                   android:id="@+id/text_totalharga"
                   android:textColor="@color/textPrimary"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0"/>

           </LinearLayout>



           <Button
               android:layout_weight="3"
               android:fontFamily="@font/my_font"
               android:textColor="@color/white"
               android:id="@+id/bt_layanandetail_lanjut"
               android:background="@drawable/btn_gradient_primary"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="LANJUT"/>

       </LinearLayout>

   </RelativeLayout>



</android.support.constraint.ConstraintLayout>
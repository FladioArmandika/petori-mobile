<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp">

        <EditText
            android:id="@+id/edit_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seg_white"
            android:drawableLeft="@drawable/ic_user_secondary"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:hint="Username"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="25dp"/>

        <EditText
            android:id="@+id/edit_login_password"
            android:textColor="@color/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seg_white"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_secondary"
            android:textColorHint="@color/textSecondary"
            android:drawablePadding="15dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="25dp"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_gradient_primary"
            android:padding="20dp"
            android:text="LOGIN"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/textPrimary"
                android:text="belum punya akun?"/>

            <TextView
                android:id="@+id/btn_changetoregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:text=" Daftar"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/btn_login_google"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:background="@drawable/seg_white"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingRight="25dp"-->
            <!--android:paddingTop="20dp"-->
            <!--android:paddingBottom="20dp"-->
            <!--android:paddingLeft="25dp"-->
            <!--android:text="Masuk dengan akun Google"-->
            <!--android:textColor="@color/textPrimary"-->
            <!--android:drawableLeft="@drawable/ic_google"/>-->



    </LinearLayout>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <!--GRADIENT-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/seg_gradient_primary"></LinearLayout>

    <ScrollView
        android:id="@+id/scrollview_home"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22pt"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/my_font"
                android:text="petori"/>

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/seg_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/my_font"
                        android:textColor="@color/textPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Melayani Kebutuhan Hewan Anda"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/textSecondary"
                        android:text="temukan pelayanan hewan terdekat dan tecepat ke rumah anda"/>

                </LinearLayout>


                <ImageView
                    android:src="@drawable/petori2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/my_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:text="Layanan"/>

                <TextView
                    android:fontFamily="@font/my_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lihat semua"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>

            </LinearLayout>

H
            <!--LIST LAYANAN-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_layanan1"
                    android:text="Perawatan"
                    android:background="@drawable/seg_white"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:onClick="gotoLayananDetail"
                    android:layout_marginRight="5dp"
                    android:layout_height="100dp">

                </Button>

                <Button
                    android:text="Medical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/seg_white"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Penitipan"
                    android:background="@drawable/seg_white"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="100dp">
                </Button>

                <Button
                    android:text="Laboratorium"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/seg_white"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
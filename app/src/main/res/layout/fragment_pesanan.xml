<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.PesananFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_font"
                android:text="Pesanan Anda"
                android:textSize="22dp"
                android:textColor="@color/textPrimary"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/seg_secondary_card"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_judul2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perawatan"
                        android:textSize="18dp"
                        android:fontFamily="@font/my_font"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_below="@id/txt_judul2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perawatan Gigi, Cream Bath"
                        android:textSize="12dp"
                        android:fontFamily="@font/my_font"
                        android:textColor="@color/textPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textSize="12dp"
                        android:fontFamily="@font/my_font"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/textPrimary"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/seg_secondary_card"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_judul1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Labolatorium"
                        android:textSize="18dp"
                        android:fontFamily="@font/my_font"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_below="@id/txt_judul1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="layanan X-Ray"
                        android:textSize="12dp"
                        android:fontFamily="@font/my_font"
                        android:textColor="@color/textPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textSize="12dp"
                        android:fontFamily="@font/my_font"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/textPrimary"
                        />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>